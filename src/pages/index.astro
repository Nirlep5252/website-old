<style>
  .index-container {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    justify-items: center;
    height: 100%;
    width: 100%;
  }
  .links {
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 6px;
  }
  .fuck-this-icon {
    margin-left: -3px;
    width: 44px;
    height: 44px;
  }
  .link {
    color: lightgray;
    padding: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .link:hover {
    background: rgba(89, 86, 86, 0.472);
    border-radius: 10px;
  }
  h1 {
    font-size: 60px;
  }
  h2 {
    font-size: 32px;
  }
  h3 {
    font-size: 24px;
  }
  p {
    margin-top: 6px;
    line-height: 1.5;
  }
  a {
    color: white;
    text-underline-offset: 4px;
    text-decoration-color: #05d8e8;
    text-decoration-thickness: 2px;
  }
  a:hover {
    text-decoration-style: wavy;
    text-underline-offset: 2px;
  }
  .techstack {
    margin-top: 50px;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 20px;
  }
  .tag {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: 20px;
    color: white;
    background: rgba(89, 86, 86, 0.472);
    padding: 6px 10px;
    border-radius: 10px;
  }
  .icon {
    height: 24px;
    filter: grayscale(.5);
  }
  @media (max-width: 810px) {
    h1 {
      font-size: 40px;
    }
    h3 {
      font-size: 20px;
    }
    p {
      font-size: 18px;
    }
  }
</style>
